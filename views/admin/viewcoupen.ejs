

<%- include('../admin/layouts/adminheader.ejs') -%>
<div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Coupon Management</h5>
        <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">NO</th>
              <th scope="col">COUPON CODE</th>
              <th scope="col">STATUS</th>
              <th scope="col">DISCOUNT %</th>
              <th scope="col">MIN DISCOUNT AMOUNT</th>
              <!-- <th scope="col">DATE</th> -->
              <th scope="col">ACTION</th>
            </tr>
          </thead>
          <tbody>
            <% coupen.forEach( function(coupen,index) { %>
                <tr>
                  <th scope="row"><%= index++ %></th>
                  <td><%= coupen.coupenCode %></td>
                  <td><%= coupen.status %></td>
                  <td><%= coupen.amount %></td>
                  <td><%= coupen.minOrder %></td>
                  <!-- <td><%= coupen.expirydate%></td> -->
                  <td>
                    <form action="/admin/deletecoupen/<%= coupen._id %>" method="post">
                      <button type="submit" class="btn  btn-danger" style="width: 100px;"
                          onclick="return confirm('Are you sure you want to delete ?')"><i class="bi bi-trash-fill"></i>DELETE</button>
                </td>
                  <% }) %>

                  <a href="/admin/addcoupen"><button type="button"
                    class="btn btn-primary float-right mb-3">Add coupon</button></a> 
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div><!--End Row-->
<%- include('../admin/layouts/adminfooter.ejs') -%>
