

<%- include('../admin/layouts/adminheader.ejs') -%>
<form action="/viewusers"> 
<div class="col-lg-12 col-md-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">CUSTOMER DETAILS</h5>
        <div class="table-responsive">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">NO</th>
              <th scope="col">USER NAME</th>
              <th scope="col">EMAIL ID</th>
              <th scope="col">PHONE</th>
              <!-- <th scope="col">JOINED DATE</th> -->
              <th scope="col">STATUS</th>
             

            </tr>
          </thead>
          <tbody>
            <% users.forEach( function(user) { %>
            <tr>
              <th scope="row"><%= index++ %></th>
              <td><%= user.fullName %></td>
              <td><%= user.email %></td>
              <td><%= user.phone %></td>
              <!-- <td><%= user.date %></td> -->
              <td>
                <% if (user.status==true){%>
                    <a href="/admin/blockUser/<%= user._id %>"><button type="button" onclick="return confirm('Are you sure you want to block <%=user.fullName%>')"
                        class="btn btn-primary"style="height:30px;width:90px">BLOCK</button></a>
                <%}  
                else { %>
                    <a href="/admin/unblockUser/<%= user._id %>"><button type="button"
                        class="btn btn-primary"style="height:30px;width:90px">UNBLOCK</button></a>
                        <% } %>
            </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div><!--End Row-->
</form>

<%- include('../admin/layouts/adminfooter.ejs') -%>
