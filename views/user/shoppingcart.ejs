	<script>
		function changeQuantity(cartId, proId, userId, count) {
			let quantity = parseInt(document.getElementById(proId).value)
			console.log(cartId,"cart");
			console.log(proId,"pro");
			console.log(userId,"user");
			console.log(count,"count");
	console.log(quantity,"iiii");
			console.log("start ")
			count = parseInt(count)
			console.log(cartId, proId, userId, count);
			$.ajax({
				url: '/changeQuantity',
				method: 'post',
				data: {
					cart: cartId,
					product: proId,
					user: userId,
					count: count,
					quantity: quantity
				},
				dataType: "json", encoded: true,
				success: (response) => {

					if(count==1){
						let currentTotal = Number($('#cartsubtotal').html())
		let price=Number($('#'+proId+'singleproduct').html())
        $('#cartsubtotal').html(currentTotal + price)
					}
					else{
						let currentTotal = Number($('#cartsubtotal').html())
		let price=Number($('#'+proId+'singleproduct').html())
        $('#cartsubtotal').html(currentTotal - price)
					}
					if (response.removeProduct) {
					
						
      Swal.fire(
    'removed!',
    'This item has been removed.',
    'success'
  )
  console.log("REACHED");
  $('#'+proId+'cartitem').remove()		
					} else {
						document.getElementById(proId).innerHTML = quantity + count
						document.getElementById('producttotal' + proId).innerHTML = parseInt(response.productprice) * parseInt(response.q)
						document.getElementById('grandTotal' + userId).innerHTML = parseInt(response.totalAmount)
	
	
	
	
	
					}
				}
			})
		}
	</script>
