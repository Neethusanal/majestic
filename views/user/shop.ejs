                    console.log(data)
                    data.forEach((product) => {
                        document.getElementById('data').innerHTML += `
                    <div  class="row isotope-grid h-100>
                        <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
                            <!-- Block2 -->
                            <div class="block2" style="padding-right:60px">
